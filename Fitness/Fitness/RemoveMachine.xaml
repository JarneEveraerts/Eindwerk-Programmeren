<Window x:Class="Fitness.RemoveMachine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fitness"
        mc:Ignorable="d"
        Title="RemoveMachine" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="Cmb_Machines" HorizontalAlignment="Center" Height="35" Margin="0,182,0,0" VerticalAlignment="Top" Width="176" SelectionChanged="Cmb_Machines_SelectionChanged" />
        <Button x:Name="Btn_Remove" Content="Remove" HorizontalAlignment="Left" Height="37" Margin="275,242,0,0" VerticalAlignment="Top" Width="111" Click="Btn_Remove_Click" />
        <Button x:Name="Btn_Cancel" Content="Cancel" HorizontalAlignment="Left" Height="37" Margin="400,242,0,0" VerticalAlignment="Top" Width="111" Click="Btn_Cancle_Click" />
    </Grid>
</Window>