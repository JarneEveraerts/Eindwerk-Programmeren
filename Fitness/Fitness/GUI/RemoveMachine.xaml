<Window x:Class="Fitness.RemoveMachine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fitness"
        mc:Ignorable="d"
        Title="RemoveMachine" Height="450" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <ComboBox x:Name="Cmb_Machines" HorizontalAlignment="Left" Height="35" Margin="150,0,0,0" VerticalAlignment="Center" Width="176" SelectionChanged="Cmb_Machines_SelectionChanged" />
        <Button x:Name="Btn_Remove" Content="Remove"  Height="37" Margin="84,164,195,26"  Width="112" Click="Btn_Remove_Click" />
        <Button x:Name="Btn_Cancel" Content="Cancel"  Height="37" Margin="201,164,80,26"  Width="110" Click="Btn_Cancle_Click" />
        <Label x:Name="Lbl_Remove" Content="Machine: " HorizontalAlignment="Left" Height="35" Margin="84,0,0,0" VerticalAlignment="Center" />
    </Grid>
</Window>